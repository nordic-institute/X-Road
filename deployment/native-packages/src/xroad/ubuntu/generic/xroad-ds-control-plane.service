[Unit]
Description=X-Road DS Control Plane
After=network.target xroad-base.service xroad-secret-store-local.service xroad-secret-store-remote.service
Requires=xroad-base.service
Wants=postgresql.service
Wants=xroad-signer.service
Wants=xroad-secret-store-local.service xroad-secret-store-remote.service

[Service]
User=xroad
Group=xroad
Type=notify
NotifyAccess=all
ExecStart=/usr/share/xroad/bin/xroad-ds-control-plane
Restart=on-failure
SuccessExitStatus=143

[Install]
WantedBy=multi-user.target
