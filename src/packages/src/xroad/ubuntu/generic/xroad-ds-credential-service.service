[Unit]
Description=X-Road DS Credential Service
After=network.target
Wants=postgresql.service
Wants=xroad-signer.service xroad-ds-identity-hub.service
StartLimitBurst=3
StartLimitIntervalSec=90

[Service]
User=xroad
Group=xroad
ExecStart=/usr/share/xroad/bin/xroad-ds-credential-service
Restart=on-failure
SuccessExitStatus=143

[Install]
WantedBy=multi-user.target
