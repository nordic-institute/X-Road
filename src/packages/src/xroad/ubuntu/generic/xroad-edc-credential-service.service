[Unit]
Description=X-Road EDC Credential Service
After=network.target
Wants=postgresql.service
Wants=xroad-signer.service xroad-edc-identity-hub.service

[Service]
User=xroad
Group=xroad
ExecStart=/usr/share/xroad/bin/xroad-edc-credential-service
Restart=on-failure
SuccessExitStatus=143

[Install]
WantedBy=multi-user.target
