[Unit]
Description=X-Road Proxy
After=network.target xroad-base.service
Requires=xroad-base.service
Wants=postgresql.service xroad-configuration-service.service
Wants=xroad-configuration-service.service xroad-signer.service xroad-confclient.service

[Service]
AmbientCapabilities=CAP_NET_BIND_SERVICE
TasksMax=infinity
User=xroad
Group=xroad
ExecStart=/usr/share/xroad/bin/xroad-proxy
Restart=on-failure
SuccessExitStatus=143

[Install]
WantedBy=multi-user.target

