[Unit]
Description=X-Road EDC Identity Hub
After=network.target
Wants=postgresql.service
Wants=xroad-signer.service

[Service]
User=xroad
Group=xroad
ExecStart=/usr/share/xroad/bin/xroad-edc-identity-hub
Restart=on-failure
SuccessExitStatus=143

[Install]
WantedBy=multi-user.target
WantedBy=xroad-edc-control-plane.service
WantedBy=xroad-edc-data-plane.service
WantedBy=xroad-edc-credential-service.service
