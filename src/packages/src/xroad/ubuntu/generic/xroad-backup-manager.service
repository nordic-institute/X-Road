[Unit]
Description=X-Road backup manager
After=network.target xroad-base.service xroad-secret-store-local.service xroad-secret-store-remote.service
Requires=xroad-base.service
Wants=xroad-secret-store-local.service xroad-secret-store-remote.service

[Service]
User=xroad
Group=xroad
Type=notify
NotifyAccess=all
ExecStart=/usr/share/xroad/bin/xroad-backup-manager
Restart=on-failure
SuccessExitStatus=143

[Install]
WantedBy=multi-user.target

