[Unit]
Description=X-Road Proxy
After=network.target xroad-base.service
Requires=xroad-base.service
Wants=postgresql.service
Wants=xroad-signer.service xroad-confclient.service xroad-proxy-ui-api.service xroad-backup-manager.service

[Service]
EnvironmentFile=-/etc/sysconfig/xroad-proxy
AmbientCapabilities=CAP_NET_BIND_SERVICE
User=xroad
Group=xroad
Type=notify
NotifyAccess=all
ExecStart=/usr/share/xroad/bin/xroad-proxy
Restart=on-failure
SuccessExitStatus=143

[Install]
WantedBy=multi-user.target

