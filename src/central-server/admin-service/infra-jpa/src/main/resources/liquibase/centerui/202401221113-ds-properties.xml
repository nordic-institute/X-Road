    <changeSet author="niis" id="202401221113-ds-properties">
        <comment>Add dataspaces related columns for Security Server.</comment>
        <addColumn tableName="security_servers">
            <column name="ds_enabled" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="ds_management_url" type="VARCHAR(255)"/>
